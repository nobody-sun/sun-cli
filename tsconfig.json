{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        // 忽略 this 的类型检查, Raise error on this expressions with an implied any type.
        "noImplicitThis": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "lib": [ "esnext","dom"],
        "baseUrl": ".",
        "outDir": "dist",
    },
    "include": [        
      "bin/*.ts", "bin/index.js", 
    ],
    // ts 排除的文件
    "exclude": ["node_modules", "dist", ".husky"]
}
